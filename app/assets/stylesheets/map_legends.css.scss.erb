.map-icon {
  width: 40px;
  height: 40px;
  display: inline-block;
  text-align: center;
}

.base-cluster.diamond {
  border-radius: 0px;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg); /* IE 9 */
  -webkit-transform: rotate(45deg); /* Safari and Chrome */
  width: 25px;
  height: 25px;
  margin-left: 2px;
  margin-top: 8px;
}

.base-cluster {
  background-clip: padding-box;
  border-radius: 20px;
  display: inline-block; 
  width: 100%; 
  height: 100%;
}
.base-cluster div {
  width: 30px;
  height: 30px;
  margin-left: 5px;
  margin-top: 5px;

  text-align: center;
  border-radius: 15px;
  font: 12px "Helvetica Neue", Arial, Helvetica, sans-serif;
}
.base-cluster span {
  line-height: 30px;
}

.tidal_power_potential {
  border-radius: 0;

  &.level1 {
    background-color: #8EFFCA;
  }
  &.level2 {
    background-color: #009387;
  }
  &.level3 {
    background-color: #297FFF;
  }
}

