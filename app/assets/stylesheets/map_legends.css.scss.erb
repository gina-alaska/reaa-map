.layers li {
  min-height: 32px;
}

.map-icon {
  width: 32px;
  height: 32px;
  display: inline-block;
  text-align: center;
  float: left;
  margin-right: 10px;
}

.legend-text {
  font-size: 12px;
}

.base-cluster {
  background-clip: padding-box;
  border-radius: 16px;
  display: inline-block; 
  width: 32px !important; 
  height: 32px !important;
  &:hover {
    z-index: 1000000 !important;
  }
}

.base-cluster.diamond {
  border-radius: 0px;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg); /* IE 9 */
  -webkit-transform: rotate(45deg); /* Safari and Chrome */
}

.base-cluster.round {
  border-radius: 16px !important;
  background-color: #fff;
  
  div {
    border-radius: 16px !important;
  }
}

.base-cluster div {
  width: 28px;
  height: 28px;
  margin-left: 2px;
  margin-top: 2px;

  text-align: center;
  border-radius: 15px;
  font: 14px "Helvetica Neue", Arial, Helvetica, sans-serif;
}
.base-cluster span {
  line-height: 28px;
  color: #fff;
  text-shadow: 0px 0px 3px #000;
}

.tidal_power_potential {
  border-radius: 0;
  background-color: #FFF;

  width: 24px !important;
  height: 24px !important;
  div { width: 20px; height: 20px; border-raidus: 0; }
  span { line-height: 20px; }

  &.level1 div {
    border-radius: 0;
    background-color: #8EFFCA;
  }
  &.level2 div {
    border-radius: 0;
    background-color: #009387;
  }
  &.level3 div {
    border-radius: 0;
    background-color: #297FFF;
  }
}

.wave_power_potential {
  border-radius: 0;

  &.level1 {
    background-color: #8EFFCA;
  }
  &.level2 {
    background-color: #009387;
  }
  &.level3 {
    background-color: #297FFF;
  }
  &.level4 {
    background-color: #002A94;
  }
}

.in_river_power_potential {
  &.level1 div {
    background-color: #FFD320;
  }
  &.level2 div {
    background-color: #FF9900;
  }
  &.level3 div {
    background-color: #FF0000;
  }
  &.level4 div {
    background-color: #7C0000;
  }
}

